<div class="row">
  <div class="col-md-8">
    <%= render partial: 'votes/voter', locals: { post: @post } %>
    <h1><%= markdown @post.title %></h1>
     <small>
       <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
       submitted <%= time_ago_in_words(@post.created_at) %> ago by
       <%= @post.user.name %>
     </small>
    <p><%= markdown @post.body %></p>
    <%= image_tag(@post.image.thumb.url) if @post.image? %>
    <%= render partial: 'comments/form', locals: {topic: @topic, post: @post} if current_user %>
    <%#TODO terse render @comments %>
    <%= render partial: 'comments/comment', locals: {comments: @comments} %>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-success' if policy(@post).edit? %>
    <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } if policy(@post).destroy? %>
  </div>
  <div>
    <h3><%= pluralize(@post.points, 'point') %></h3>
    <small>
      <%= pluralize(@post.up_votes, 'up vote') %>, 
      <%= pluralize(@post.down_votes, 'down vote') %>
    </small>
  </div>
  <%= render partial: 'favorites/favorite', locals: { post: @post } %>
</div>