<%= simple_form_for([topic, post, post.comments.new], :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.label :body %>
  <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment" %>
  <%= f.full_error :body %>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %> 