<% if policy(Vote.new).create? %>
<div class="pull-left vote-arrows">
  <div><%= link_to " ", topic_post_up_vote_path(@topic, post), class: "glyphicon glyphicon-chevron-up #{up_vote_link_classes(post)}", method: :post %></div>
  <div><strong><%= post.points %></strong></div> 
  <div><%= link_to " ", topic_post_down_vote_path(@topic, post), class: "glyphicon glyphicon-chevron-down #{down_vote_link_classes(post)}", method: :post %></div>
</div>
<% end %>